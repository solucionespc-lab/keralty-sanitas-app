{
  "name": "functions",
  "version": "0.1.0",
  "description": "Backend conectado con Firebase para el desarrollo de endpoints y cloud functions para las aplicaciones",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/firestore": "^4.15.1",
    "@graphql-tools/schema": "^7.1.5",
    "apollo-server-express": "^3.9.0",
    "express": "^4.18.1",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.18.0",
    "graphql": "^15.8.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-middleware": "^6.1.31",
    "graphql-shield": "^7.5.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.18.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-firebase-functions": "^1.0.14",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-graphql-schema": "^2.0.3",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^0.2.3",
    "typescript": "^4.5.4"
  }
}
