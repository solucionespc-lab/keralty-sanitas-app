{
  "version": "1.3.0",
  "name": "backend",
  "scripts": {
    "dev": "npm run cred:dev && firebase emulators:start --import=./backup",
    "staging": "npm run cred:staging && firebase deploy --only functions:backend:endpoint-api",
    "production": "npm run cred:prod && firebase deploy --only functions:backend:endpoint.api",
    "extensions:keys": "infisical export --env=dev --path=/keralty/infraestructure/extensions > .env.local",
    "cred:dev": "infisical export --env=dev --path=/keralty/backend > .env",
    "cred:staging": "infisical export --env=staging --path=/keralty/backend > .env",
    "cred:prod": "infisical export --env=prod --path=/keralty/backend > .env",
    "backup": "firebase emulators:export backup --force",
    "security:keys": "infisical scan --verbose",
    "security:code": "snyk monitor",
    "watch": "tsc --watch",
    "build": "tsc",
    "lint": "eslint --ext .js,.ts .",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@apollo/server": "^4.11.2",
    "@escape.tech/graphql-armor": "^3.1.2",
    "@google-cloud/functions-framework": "^3.4.4",
    "@graphql-tools/schema": "^10.0.14",
    "algoliasearch": "^4.23.3",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "firebase-admin": "^13.0.2",
    "firebase-functions": "^6.2.0",
    "graphql": "^16.10.0",
    "graphql-middleware": "^6.1.35",
    "graphql-shield": "^7.6.5",
    "graphql-tag": "^2.12.6",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/express-serve-static-core": "^5.0.3",
    "@types/lodash": "^4.17.13",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "8.56.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "firebase-functions-test": "^3.4.0",
    "typescript": "^5.7.2"
  },
  "private": true
}
